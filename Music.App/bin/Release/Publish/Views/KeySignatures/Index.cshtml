@{
    ViewBag.Title = "Key Signatures";
}

@using (Html.BeginForm("Index", "KeySignatures", FormMethod.Post))
{
    <div class="container-fluid format-form">
        <form class="form-horizontal">
            <div class="form-inline ">
                <select id="Key" name="Key" class="form-control">
                    <option value='C'>C</option>
                    <option value='D'>D</option>
                    <option value='E'>E</option>
                    <option value='F'>F</option>
                    <option value='G'>G</option>
                    <option value='A'>A</option>
                    <option value='B'>B</option>
                </select>
                <select id="Accidential" name="Accidential" class="form-control">
                    <option value="natural">♮</option>
                    <option value="flat">♭</option>
                    <option value="sharp">#</option>
                </select>
                <select id="Mode" name="Mode" class="form-control">
                    <option value="major">Major</option>
                    <option value="natMinor">Natural Minor</option>
                    <option value="harMinor">Harmonic Minor</option>
                    <option value="melMinor">Melodic Minor</option>
                    <option value="dorian">Dorian</option>
                    <option value="phrygian">Phrygian</option>
                    <option value="lydian">Lydian</option>
                    <option value="mixolydian">Mixolydian</option>
                    <option value="locrian">Locrian</option>
                    <option value="other">Other...</option>
                </select>
                <input id="CustomMode" name="CustomMode" type="text" class="form-control" placeholder="Custom" disabled>
                <button type="submit" class="btn btn-default" @*disabled="disabled"*@>Submit</button>
            </div>
        </form>
    </div>

    //KEYBOARD

    <div class="container-fluid">
        <div class="row">
            <ul class="set format-keys">
                <li id="cKey" name="cKey" class="white @ViewBag.KeyColorC c"></li>
                <li id="csKey" name="csKey" class="black @ViewBag.KeyColorCS cs"></li>
                <li id="dKey" name="dKey" class="white @ViewBag.KeyColorD d"></li>
                <li id="dsKey" name="dsKey" class="black @ViewBag.KeyColorDS ds"></li>
                <li id="eKey" name="eKey" class="white @ViewBag.KeyColorE e"></li>
                <li id="fKey" name="fKey" class="white @ViewBag.KeyColorF f"></li>
                <li id="fsKey" name="fsKey" class="black @ViewBag.KeyColorFS fs"></li>
                <li id="gKey" name="gKey" class="white @ViewBag.KeyColorG g"></li>
                <li id="gsKey" name="gsKey" class="black @ViewBag.KeyColorGS gs"></li>
                <li id="aKey" name="aKey" class="white @ViewBag.KeyColorA a"></li>
                <li id="asKey" name="asKey" class="black @ViewBag.KeyColorAS as"></li>
                <li id="bKey" name="bKey" class="white @ViewBag.KeyColorB b"></li>
